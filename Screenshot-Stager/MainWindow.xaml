<Window
    x:Class="Screenshot_Stager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Screenshot_Stager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="MainWindow"
    Width="{Binding Path=ViewModel.Width, Mode=TwoWay}"
    Height="{Binding Path=ViewModel.Height, Mode=TwoWay}"
    Background="{ui:ThemeResource AccentContentFillColorPrimaryBrush}"
    LocationChanged="Window_LocationChanged"
    SizeChanged="Window_SizeChanged"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="LabelText" TargetType="Label">
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="{ui:ThemeResource TextFillColorPrimaryBrush}" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="42" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image
            x:Name="BackgroundImage"
            Grid.Row="1"
            Source="/TreeBackground.jpg"
            Stretch="UniformToFill" />

        <Grid Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ui:TitleBar
                Grid.Column="1"
                Height="40"
                ShowMaximize="False"
                ShowMinimize="False" />

            <Expander
                Width="300"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="{ui:ThemeResource ApplicationBackgroundBrush}"
                Header="Screenshot Stager : Options"
                IsExpanded="True">
                <StackPanel HorizontalAlignment="Left" Orientation="Vertical">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Content="Width:"
                            Style="{StaticResource LabelText}" />
                        <TextBox
                            x:Name="WidthTB"
                            Grid.Row="0"
                            Grid.Column="1"
                            Text="800" />

                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Content="Height:"
                            Style="{StaticResource LabelText}" />
                        <TextBox
                            x:Name="HeightTB"
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="450" />
                    </Grid>
                    <Button
                        x:Name="SetSizeButton"
                        Click="SetSizeButton_Click"
                        Content="Set Stage Size" />

                    <Button
                        x:Name="ListWindows"
                        Click="ListWindows_Click"
                        Content="Refresh List of Windows" />

                    <ListView x:Name="WindowList">
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="local:WindowDetails">
                                <TextBlock Tag="{Binding Path=Handle}" Text="{Binding Path=Title}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <Button
                        x:Name="ChangeSizeBTN"
                        Click="ChangeSizeBTN_Click"
                        Content="Stage Selected Window" />
                </StackPanel>
            </Expander>

        </Grid>
    </Grid>
</Window>
