<Window
    x:Class="Screenshot_Stager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Screenshot_Stager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    Background="DimGray"
    LocationChanged="Window_LocationChanged"
    SizeChanged="Window_SizeChanged"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image
            x:Name="BackgroundImage"
            Grid.Row="1"
            Source="/TreeBackground.jpg"
            Stretch="UniformToFill" />

        <Button
            Width="48"
            Height="32"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="Red"
            Click="CloseButton_Click">
            <TextBlock FontFamily="Segoe UI Symbol" Text="" />
        </Button>

        <Expander
            Grid.RowSpan="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Header="Screenshot Stager : Options"
            IsExpanded="True">
            <StackPanel
                Width="400"
                HorizontalAlignment="Left"
                Orientation="Vertical">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Content="Width:" />
                    <TextBox
                        x:Name="WidthTB"
                        Grid.Row="0"
                        Grid.Column="1"
                        Text="800" />

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="Height:" />
                    <TextBox
                        x:Name="HeightTB"
                        Grid.Row="1"
                        Grid.Column="1"
                        Text="450" />
                </Grid>
                <Button
                    x:Name="SetSizeButton"
                    Click="SetSizeButton_Click"
                    Content="Set Stage Size" />

                <Button
                    x:Name="ListWindows"
                    Click="ListWindows_Click"
                    Content="Refresh List of Windows" />

                <ListView x:Name="WindowList">
                    <ListView.ItemTemplate>
                        <DataTemplate DataType="local:WindowDetails">
                            <TextBlock Tag="{Binding Path=Handle}" Text="{Binding Path=Title}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Button
                    x:Name="ChangeSizeBTN"
                    Click="ChangeSizeBTN_Click"
                    Content="Stage Selected Window" />
            </StackPanel>
        </Expander>
    </Grid>
</Window>
