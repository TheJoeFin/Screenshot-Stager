<Window
    x:Class="Screenshot_Stager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Screenshot_Stager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button
                x:Name="ChangeSizeBTN"
                Click="ChangeSizeBTN_Click"
                Content="Change size" />
            <Button
                x:Name="ListWindows"
                Click="ListWindows_Click"
                Content="List Windows" />
            <TextBlock x:Name="WindowsText" Text="Windows" />
        </StackPanel>
    </Grid>
</Window>
